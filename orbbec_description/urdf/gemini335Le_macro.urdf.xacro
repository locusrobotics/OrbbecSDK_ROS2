<?xml version="1.0" encoding="utf-8"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
<!-- based off of orbbec_description/urdf/gemini335Le.urdf.xacro -->

<xacro:macro name="gemini_335L_336L" params="
    parent
    prefix:='camera'
    *origin
    sim_gazebo:=false
    gz_fps:='5'
    gz_image_width:='848'
    gz_image_height:='530'">

  <!-- The original link started with camera_link -->
  <joint name="${prefix}_gemini_mount_fixed_joint" type="fixed">
    <parent link="${parent}" />
    <child link="${prefix}_link" />
    <xacro:insert_block name="origin"/>
  </joint>

  <link
    name="${prefix}_link">
    <inertial>
      <origin
        xyz="0.01235 -0.0020872 0.013243"
        rpy="0 0 0" />
      <mass
        value="0.0.043446" />
      <inertia
        ixx="6.3353E-05"
        ixy="-1.7904E-06"
        ixz="-8.8334E-08"
        iyy="8.2334E-06"
        iyz="3.3581E-07"
        izz="6.2898E-05" />
    </inertial>
    <visual>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="file://$(find orbbec_description)/meshes/gemini335Le/base_link_simplified.stl" />
      </geometry>
      <material name="">
        <color rgba="0.8 0.8 0.8 1" />
      </material>
    </visual>
    <!-- TODO - set collision size -->
    <collision>
      <origin xyz="0 0 0.015" rpy="0 0 0" />
      <geometry>
        <box size="0.03 0.13 0.03"/>
      </geometry>
    </collision>
  </link>

  <link name="${prefix}_bottom_screw_frame" />
  <joint
    name="${prefix}_bottom_screw_frame_joint"
    type="fixed">
    <origin
      xyz="0 0 0"
      rpy="0 0 0" />
    <parent
      link="${prefix}_link" />
    <child
      link="${prefix}_bottom_screw_frame" />
    <axis
      xyz="0 0 0" />
  </joint>

  <link name="${prefix}_infra2_frame" />
  <joint
    name="${prefix}_infra2_frame_joint"
    type="fixed">
    <origin
      xyz="0.034005 -0.0475 0.014048"
      rpy="0 0 0" />
    <parent
      link="${prefix}_link" />
    <child
      link="${prefix}_infra2_frame" />
    <axis
      xyz="0 0 0" />
  </joint>

  <link name="${prefix}_infra1_frame" />
  <joint
    name="${prefix}_infra1_frame_joint"
    type="fixed">
    <origin
      xyz="0.034005 0.0475 0.014048"
      rpy="0 0 0" />
    <parent
      link="${prefix}_link" />
    <child
      link="${prefix}_infra1_frame" />
    <axis
      xyz="0 0 0" />
  </joint>

  <link name="${prefix}_color_frame" />
  <joint
    name="${prefix}_frame_frame_joint"
    type="fixed">
    <origin
      xyz="0.034014 0.02375 0.014048"
      rpy="0 0 0" />
    <parent
      link="${prefix}_link" />
    <child
      link="${prefix}_color_frame" />
    <axis
      xyz="0 0 0" />
  </joint>

  <link name="${prefix}_imu_frame" />
  <joint
    name="${prefix}_imu_frame_joint"
    type="fixed">
    <origin
      xyz="0.019757 0.03619 0.013358"
      rpy="0 0 0" />
    <parent
      link="${prefix}_link" />
    <child
      link="${prefix}_imu_frame" />
    <axis
      xyz="0 0 0" />
  </joint>

  <xacro:if value="${sim_gazebo}">
    <!-- Use the realsense2_gz_description which can simulate a generic depth camera -->
    <xacro:include filename="$(find realsense2_gz_description)/urdf/rgbd_camera.gazebo.xacro" />
    <!-- TODO: Upstream changes required for a triggered RBGD camera -->
    <xacro:gazebo_rgbd
      name="${prefix}"
      gz_topic_name="${prefix}"
      fps="${gz_fps}"
      image_width="${gz_image_width}"
      image_height="${gz_image_height}"
      h_fov="${94 * pi/180}"
      v_fov="${68 * pi/180}"
      min_depth="0.5"
      max_depth="6.0" />
  </xacro:if>

</xacro:macro>
</robot>
